<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring
         http://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean id="metricsRoutePolicyFactory"
          class="org.apache.camel.component.metrics.routepolicy.MetricsRoutePolicyFactory"/>

    <camelContext id="providerCamelContext" xmlns="http://camel.apache.org/schema/spring" trace="true">
        <routeBuilder ref="restRoutes"/>
    </camelContext>

</beans>